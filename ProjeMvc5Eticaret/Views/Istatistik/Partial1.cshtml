@model IEnumerable<ProjeMvc5Eticaret.Models.Siniflar.SinifGrup2>



    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Striped Full Width Table</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Departman</th>
                        <th>Bar</th>
                        <th style="width: 40px">Sayı</th>
                    </tr>
                </thead>
                <tbody>
                    @{int Sırano = 0; }
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@{Sırano++;} @Sırano</td>
                            <td>@x.Departman</td>
                            <td>
                                @if (x.Sayi == 1)
                                {

                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                    </div>
                                }
                                @if (x.Sayi == 2)
                                {

                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-warning" style="width: 70%"></div>
                                    </div>

                                }
                                @if (x.Sayi == 3)
                                {

                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-success" style="width: 90%"></div>
                                    </div>

                                }
                            </td>
                            <td>
                                @if (x.Sayi == 1)
                                {
                                    <span class="badge bg-danger">@x.Sayi</span>
                                }
                                @if (x.Sayi == 2)
                                {
                                    <span class="badge bg-warning">@x.Sayi</span>
                                }
                                @if (x.Sayi == 3)
                                {
                                    <span class="badge bg-success">@x.Sayi</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
