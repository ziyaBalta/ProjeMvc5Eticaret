@using ProjeMvc5Eticaret.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<table class="table table-striped">
    <tr>
        <th>CariAdı</th>
        <th>CariSoyadı</th>
        <th>Cari Sehir</th>
        <th>Cari Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CariAdi</td>
            <td>@x.CariSoyadi</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil/@x.CariID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.CariID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@x.CariID" class="btn btn-success">Detaylar</a></td>
        </tr>
    }
</table>

<td><a href="/Cari/YeniCari/" class="btn btn-success">Cari Ekle</a></td>

