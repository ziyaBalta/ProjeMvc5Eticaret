@using ProjeMvc5Eticaret.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.dpers</li>

</ol>

<table class="table table-condensed">

    <tr>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih </th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Urun.UrunAdi</td>
            <td>@x.Cariler.CariAdi @x.Cariler.CariSoyadi</td>
            <td>@x.Fiyat ₺</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>
        </tr>
    }
</table>
